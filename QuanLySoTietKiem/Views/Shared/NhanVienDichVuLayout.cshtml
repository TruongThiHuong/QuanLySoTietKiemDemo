                    <a href="#" class="list-group-item list-group-item-action list-group-item-light">Thêm quy định</a>
                    <a href="#" class="list-group-item list-group-item-action list-group-item-light">Sửa quy định</a>
                </div>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
